<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/album"
        android:src="@mipmap/album"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="3dp"
        android:indeterminate="false"
        android:layout_below="@+id/state"
        android:layout_alignStart="@+id/t" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-15dp"
        android:background="@mipmap/pause"
        android:id="@+id/play"
        android:layout_below="@+id/album"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:background="@mipmap/stop"
        android:layout_alignTop="@+id/quit"
        android:layout_alignStart="@+id/album" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/quit"
        android:id="@+id/quit"
        android:layout_below="@+id/album"
        android:layout_alignEnd="@+id/album" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:text="stop"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current"
        android:textColor="#fff"
        android:text="00:40"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:30"
        android:textColor="#fff"
        android:id="@+id/total"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="25sp"
        android:gravity="center"
        android:text="July"
        android:id="@+id/t"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="吴亦凡"
        android:id="@+id/a"
        android:textColor="#fff"
        android:layout_below="@+id/t"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/pre"
        android:background="@mipmap/pre"
        android:layout_below="@+id/album"
        android:layout_toStartOf="@+id/play" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:background="@mipmap/next"
        android:layout_below="@+id/album"
        android:layout_toEndOf="@+id/play" />


</RelativeLayout>
